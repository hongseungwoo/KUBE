<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blockCell"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:src="@drawable/ifblock"
        android:id="@+id/blockImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/moduleNumTextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/blockImageView" />

    <ImageView
        android:layout_height="30dp"
        android:src="@drawable/blue"
        android:id="@+id/optionImageView"
        android:layout_width="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/moduleNumTextView" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_below="@+id/moduleNumTextView"
        android:layout_toEndOf="@+id/blockImageView"
        android:layout_width="60dp"
        android:layout_height="30dp" />


</RelativeLayout>
